<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                      
                                                    
                 
                       
                                      
                 
                      
                                      
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detail.DetailActivity" android:tag="layout/activity_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/txtPlace"
            android:layout_width="333dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:tag="binding_1"    
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTVPlace" />

        <TextView
            android:id="@+id/lblTVTime"
            android:layout_width="333dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:text="Time:"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPlace" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="333dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
                                  
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTVTime"  android:tag="binding_2"/>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="415dp"
            android:layout_height="260dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblTVPlace"
            android:layout_width="333dp"
            android:layout_height="24dp"
            android:layout_marginTop="44dp"
            android:text="Place:"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapView" />

        <TextView
            android:id="@+id/txtMag"
            android:layout_width="211dp"
            android:layout_height="144dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
                                 
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTime"  android:tag="binding_3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
         